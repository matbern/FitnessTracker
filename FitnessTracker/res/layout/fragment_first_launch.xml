<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/textView_Preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:text="Inställningar"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/editText_person_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView_Preferences"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Ange ditt namn"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/editText_person_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_person_name"
        android:layout_marginBottom="10dp"
        android:ems="10"
        android:hint="Ange din ålder"
        android:inputType="number" />

    <Button
        android:id="@+id/register_button_apply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:onClick="onButtonApply"
        android:padding="10dp"
        android:text="Ok"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/editText_person_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_person_age"
        android:ems="10"
        android:hint="Ange din vikt i kg"
        android:inputType="number" />

    <EditText
        android:id="@+id/editText_person_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editText_person_weight"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="Ange din längd i cm"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText_person_name"
        android:layout_toRightOf="@+id/editText_person_name" >

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Man" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kvinna" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/aktivitylevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/register_button_apply"
        android:layout_alignParentLeft="true" >

        <RadioButton
            android:id="@+id/ingen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimal" />

        <RadioButton
            android:id="@+id/latt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="Låg" />

        <RadioButton
            android:id="@+id/medel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medel" />

        <RadioButton
            android:id="@+id/hog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hög" />
    </RadioGroup>

    <TextView
        android:id="@+id/matsumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/aktivitylevel"
        android:layout_alignParentLeft="true"
        android:text="Aktivitetsnivå:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>