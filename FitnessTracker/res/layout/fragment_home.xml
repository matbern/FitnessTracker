<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <FrameLayout
        android:id="@+id/FrameLayoutTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" >

        <ProgressBar
            android:id="@+id/progressBarTotal"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_preogress_bar" />

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0%" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayoutFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/FrameLayoutTotal" >

        <ProgressBar
            android:id="@+id/progressBarFood"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_preogress_bar" />

        <TextView
            android:id="@+id/textView_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0%" />
        
    </FrameLayout>

    <FrameLayout
        android:id="@+id/FrameLayoutWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@id/FrameLayoutTotal"
         >

        <ProgressBar
            android:id="@+id/progressBarWorkout"
            android:layout_gravity="center"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:indeterminate="false"
            android:max="100"
            android:progress="0"
            android:progressDrawable="@drawable/circular_preogress_bar" />

        <TextView
            android:id="@+id/textView_workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="0%" />
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/LinearLayout_Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:measureWithLargestChild="true"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        android:weightSum="3" >

        <Button
            android:id="@+id/addFood"
            android:layout_width="@dimen/homeFragment_Button_Width"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="@string/addFood_Button" />

        <Button
            android:id="@+id/addWorkout"
            android:layout_width="@dimen/homeFragment_Button_Width"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="@string/addWorkout_Button" />

        <Button
            android:id="@+id/seeAddedItems"
            android:layout_width="@dimen/homeFragment_Button_Width"
            android:layout_height="match_parent"
            android:layout_margin="2.5dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:text="@string/seeAddedItem_Button" />
    </LinearLayout>

    <TextView
        android:id="@+id/homeFragment_TextViewTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FrameLayoutTotal"
        android:layout_centerHorizontal="true"
        android:text="@string/Progressbar_Total" />

    <TextView
        android:id="@+id/homeFragment_TextViewFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/homeFragment_TextViewWorkout"
        android:layout_alignBottom="@+id/homeFragment_TextViewWorkout"
        android:layout_alignLeft="@+id/FrameLayoutFood"
        android:layout_marginLeft="27dp"
        android:text="@string/Progressbar_Food" />

    <TextView
        android:id="@+id/homeFragment_TextViewWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/FrameLayoutWorkout"
        android:layout_below="@+id/FrameLayoutWorkout"
        android:layout_marginRight="15dp"
        android:text="@string/Progressbar_Workout" />

    <TextView
        android:id="@+id/matsumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/homeFragment_TextViewFood"
        android:layout_below="@+id/homeFragment_TextViewTotal"
        android:layout_marginTop="37dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/workoutsumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/matsumma"
        android:layout_alignBottom="@+id/matsumma"
        android:layout_alignRight="@+id/FrameLayoutWorkout"
        android:text="TextView" />
    
</RelativeLayout>