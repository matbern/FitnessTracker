<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/matsumma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Add Workout"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/traning1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matsumma"
        android:layout_marginTop="30dp"
        android:layout_toLeftOf="@+id/workoutw"
        android:text="Workout:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <AutoCompleteTextView
        android:id="@+id/workoutw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/traning1"
        android:layout_alignBottom="@+id/traning1"
        android:layout_alignLeft="@+id/matsumma"
        android:ems="10"/>

    <EditText
        android:id="@+id/timeamount"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/workoutw"
        android:layout_below="@+id/workoutw"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tot1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeamount"
        android:layout_toRightOf="@+id/timeamount"
        android:text="minutes"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/weightloss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/timeamount"
        android:layout_alignRight="@+id/traning1"
        android:text="Time:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/kvar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weightloss"
        android:layout_below="@+id/weightloss"
        android:layout_marginTop="26dp"
        android:text="Date:"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <LinearLayout 
       android:id="@+id/linearlayout_workoutfragment_buttons"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/kvar1"
       android:layout_marginTop="10dp"
       android:orientation="horizontal"
       android:weightSum="2"
        >
        <Button
        android:id="@+id/createWor"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:background="@drawable/custom_button"
        android:layout_weight="1"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Create a workout" />

    <Button
        android:id="@+id/addWo"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@drawable/custom_button"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:text="Add" />
        
        
    </LinearLayout>
    
    <TextView
        android:id="@+id/workOname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/linearlayout_workoutfragment_buttons"
        android:layout_marginTop="10dp" 
        />
    
    <TextView
        android:id="@+id/workamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/workOname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/workCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/workamount"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/workamount"
        android:layout_marginTop="5dp" />
    
    <EditText
        android:id="@+id/workoutwwww"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/kvar1"
        android:layout_alignBottom="@+id/kvar1"
        android:layout_alignLeft="@+id/timeamount"
        android:editable="false"
        android:ems="10"
        android:inputType="date" />

</RelativeLayout>
